FROM python:3.11-slim

WORKDIR /app

# Install uv for fast package management
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Copy dependency files
COPY pyproject.toml ./

# Install dependencies
# For reproducible builds: generate uv.lock with `uv lock` and commit it
# Then uncomment the COPY line below and use --frozen flag
COPY uv.lock ./
RUN uv sync --frozen --no-dev

# Copy application code
COPY {{ package_name }}/ ./{{ package_name }}/

# Expose port
EXPOSE 8000

# Run the application
CMD ["uv", "run", "uvicorn", "{{ package_name }}.main:app", "--host", "0.0.0.0", "--port", "8000"]
